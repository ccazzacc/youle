<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:background="@color/white"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
            android:id="@+id/relativeLayout2">
        <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout"
                android:layout_below="@+id/linearLayout" android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp">
            <ImageView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:id="@+id/custom_img"
                    android:layout_below="@+id/custom_txt" android:layout_alignParentLeft="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/custom_txt"
                    android:textColor="@color/black"
                    android:text="123321321"
                    android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                    android:layout_marginLeft="5dp"/>
            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/custom_layout_sound"
                    android:background="@drawable/sound_play_bg"
                    android:layout_centerVertical="true" android:layout_alignLeft="@+id/custom_txt">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/custom_play" android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true" android:background="@drawable/sound0"
                        android:layout_marginLeft="5dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/custom_paus" android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10s"
                        android:id="@+id/custom_audtime" android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true" android:layout_alignParentRight="true">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/custom_even"
                    android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/custom_even_txt"
                    android:textColor="@color/black" android:textSize="18dp"
                    android:layout_below="@+id/custom_even" android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"/>
        </RelativeLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
                android:id="@+id/linearLayout"
                android:layout_alignParentTop="true" android:layout_alignParentLeft="true">
            <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:id="@+id/custom_av"
                    android:layout_margin="10dp" android:background="@drawable/avatars"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/custom_uname" android:layout_gravity="center_vertical"
                    android:textColor="@color/black" android:textSize="20dp"/>
        </LinearLayout>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/custom_xx" android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" android:background="@drawable/close_button"
                android:layout_marginTop="3dp" android:layout_marginRight="3dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
            android:id="@+id/relativeLayout3"
            android:layout_below="@+id/relativeLayout2" android:layout_alignLeft="@+id/relativeLayout2"
            android:clickable="true"
            android:layout_alignRight="@+id/relativeLayout2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20分钟前"
                android:id="@+id/custom_time"
                android:textColor="@color/black" android:textSize="20dp" android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" android:layout_marginTop="5dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/custom_time" android:background="@drawable/time_icon"
                android:layout_marginTop="5dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/custom_user_type" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp" android:visibility="visible"/>
    </RelativeLayout>

</RelativeLayout>