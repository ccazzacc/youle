<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.youle"
    xmlns:miles="http://schemas.android.com/apk/res/com.youle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/msg_iv_buttom"
            android:layout_width="58.0dip"
            android:layout_height="58.0dip"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/ava_buttomLeft"
            android:layout_marginTop="30dp"
            android:src="@drawable/avatar_mask_128" />

        <LinearLayout
            android:id="@+id/msg_lout_chat"
            style="@style/wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="40dp"
            android:layout_toLeftOf="@+id/msg_tv_time"
            android:layout_toRightOf="@+id/msg_iv_line"
            >
            <TextView
                android:id="@+id/msg_tv_chat"
                style="@style/wrap_content"
                android:layout_margin="4dp"
                android:textColor="@color/header_cancel_color" />
			<FrameLayout
                android:id="@+id/msg_ly_chat"
                style="@style/full_screen"
                >
            <ImageView
                android:id="@+id/msg_iv_photo"
                style="@style/wrap_content"
                android:scaleType="fitXY"
                />
            <ImageView
                android:id="@+id/msg_iv_photoTop"
                style="@style/wrap_content"
                android:scaleType="fitXY"
                android:background="@drawable/event_bg3"
                />
            </FrameLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/msg_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/msg_lout_chat"
            android:textSize="@dimen/font_size_large"
            android:layout_marginRight="@dimen/m_right" />

        <ImageView
            android:id="@+id/msg_iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/msg_tv_time"
            android:layout_below="@+id/msg_tv_time" />
        <!-- com.youle.view.CircularImage -->

        <com.youle.view.CircularImage
            android:id="@+id/msg_iv_ava"
            android:layout_width="54.0dip"
            android:layout_height="54.0dip"
            android:layout_alignTop="@+id/msg_iv_buttom"
            android:layout_marginLeft="@dimen/ava_left"
            android:layout_marginTop="2dp"
            android:src="@drawable/avatars" />

        <ImageView
            android:id="@+id/msg_iv_address"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_below="@+id/msg_lout_chat"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/msg_iv_line"
            android:src="@drawable/point_icon"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/msg_tv_address"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:layout_below="@+id/msg_lout_chat"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/msg_iv_address"
            android:textColor="@color/main_address"
           />

        <ImageView
            android:id="@+id/msg_iv_line"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@+id/msg_iv_address"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/ava_buttomLeft"
            android:layout_toRightOf="@+id/msg_iv_ava" />
    </RelativeLayout>

</LinearLayout>