<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miles="http://schemas.android.com/apk/res/com.youle"
    style="@style/wrap_content"
    android:background="@drawable/cyq_tzbt"
    android:layout_marginTop="10dp"
    android:paddingBottom="8.0dip"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:paddingTop="8.0dip" >
    <com.youle.view.RoundedCornersImage
        android:id="@+id/carMain_ivAva"
        android:layout_width="54.0dip"
        android:layout_height="54.0dip"
        android:scaleType="centerCrop"
        miles:cornerRadius="5.0dip"
        android:background="@drawable/avatars" />
    <TextView
        android:id="@+id/carMain_tvName"
        style="@style/horizontal_stretch"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@+id/carMain_ivAva"
        android:lineSpacingExtra="2.0dip"
        android:textColor="@color/black"
        android:textSize="20.0sp" 
        />
    <TextView
        android:id="@+id/carMain_tvNum"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_below="@+id/carMain_tvName"
        android:layout_marginTop="8.0dip"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:textSize="16.0sp" />
    <ImageView
        android:id="@+id/carMain_ivNum"
        style="@style/wrap_content"
        android:layout_below="@+id/carMain_tvName"
        android:layout_marginLeft="10.0dip"
        android:layout_marginTop="8.0dip"
        android:layout_toLeftOf="@+id/carMain_tvNum"
        android:src="@drawable/icon_posts"/>
    
</RelativeLayout>