<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/set_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:clickable="true"
        android:background="@drawable/layout_click"
        android:id="@+id/left_setting"
        style="@style/horizontal_stretch"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:paddingBottom="7.5dip"
        android:paddingTop="7.5dip" >

        <ImageView
            android:id="@+id/left_iv_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/setting" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/card_arrow" />

        <TextView
            android:id="@+id/left_tvSet"
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/left_iv_set"
            android:ellipsize="end"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/set"
            android:textSize="17.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/left_shop"
        android:clickable="true"
        android:background="@drawable/layout_click"
        style="@style/horizontal_stretch"
        android:layout_above="@+id/left_setting"
        android:layout_alignParentLeft="true"
        android:paddingBottom="7.5dip"
        android:paddingTop="7.5dip" >

        <ImageView
            android:id="@+id/left_iv_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/merchant" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/card_arrow" />

        <TextView
            android:id="@+id/left_tvName"
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/left_iv_shop"
            android:ellipsize="end"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/shop"
            android:textSize="17.0sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/horizontal_stretch"
        android:id="@+id/left_message"
        android:clickable="true"
        android:background="@drawable/layout_click"
        android:layout_above="@+id/left_shop"
        android:layout_alignParentLeft="true"
        android:paddingBottom="7.5dip"
        android:paddingTop="7.5dip" >

        <ImageView
            android:id="@+id/left_iv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/message" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/card_arrow" />

        <TextView
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/left_iv_message"
            android:ellipsize="end"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/message"
            android:textSize="17.0sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/horizontal_stretch"
        android:id="@+id/left_coupon"
        android:clickable="true"
        android:background="@drawable/layout_click"
        android:layout_above="@+id/left_message"
        android:layout_alignParentLeft="true"
        android:paddingBottom="7.5dip"
        android:paddingTop="7.5dip" >

        <ImageView
            android:id="@+id/left_iv_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/coupon" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/card_arrow" />

        <TextView
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/left_iv_coupon"
            android:ellipsize="end"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/coupon"
            android:textSize="17.0sp"
            android:textStyle="bold" />
    </RelativeLayout>
	<RelativeLayout
        style="@style/horizontal_stretch"
        android:id="@+id/left_Me"
        android:clickable="true"
        android:background="@drawable/layout_click"
        android:layout_above="@+id/left_coupon"
        android:layout_alignParentLeft="true"
        android:paddingBottom="7.5dip"
        android:paddingTop="7.5dip" >

        <ImageView
            android:id="@+id/left_iv_ava"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/message" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/card_arrow" />

        <TextView
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/left_iv_ava"
            android:ellipsize="end"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/me"
            android:textSize="17.0sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <RelativeLayout
        style="@style/horizontal_stretch"
        android:id="@+id/left_home"
        android:clickable="true"
        android:background="@drawable/home_click"
        android:layout_above="@+id/left_Me"
        android:layout_alignParentLeft="true"
        android:paddingBottom="7.5dip"
        android:paddingTop="7.5dip">

        <ImageView
            android:id="@+id/left_iv_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.0dip"
            android:scaleType="centerCrop"
            android:src="@drawable/home" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16.0dip"
            android:src="@drawable/card_arrow" />

        <TextView
            android:id="@+id/left_tv_home"
            style="@style/horizontal_stretch"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/left_iv_home"
            android:ellipsize="end"
            android:padding="0.0dip"
            android:singleLine="true"
            android:text="@string/home"
            android:textSize="17.0sp"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>