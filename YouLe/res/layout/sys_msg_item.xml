<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
            android:background="@drawable/message_bg_h" android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" android:layout_marginRight="10dp" android:visibility="gone">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text_msg_tit" android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                android:textSize="25dp" android:textColor="@color/header_cancel_color"
                android:textIsSelectable="true" android:layout_marginLeft="7dp"
                android:layout_marginTop="7dp"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="left|center_vertical"
            android:background="@drawable/message_bg" android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" android:layout_marginBottom="10dp" android:clickable="false">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_msg_data" android:layout_gravity="left|center_vertical"
                android:textColor="@color/header_cancel_color" android:textSize="17dp" android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp" android:layout_marginRight="10dp" android:layout_marginBottom="25dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text_msg_date" android:layout_centerVertical="true"
                android:layout_alignParentRight="true" android:layout_marginRight="7dp"
                android:textColor="@color/header_cancel_color" android:textSize="14dp" android:textIsSelectable="false"
                android:layout_gravity="right|center_vertical"/>
    </LinearLayout>
</LinearLayout>