<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miles="http://schemas.android.com/apk/res/com.youle"
    style="@style/horizontal_stretch"
    android:paddingBottom="8.0dip"
    android:paddingLeft="15.0dip"
    android:paddingRight="15.0dip"
    android:background="@drawable/cyq_tzbt"
    android:paddingTop="8.0dip"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp">
    <com.youle.view.RoundedCornersImage
        android:id="@+id/carlist_ivAva"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:scaleType="centerCrop" 
        miles:cornerRadius="5.0dip"
        android:background="@drawable/avatars"/>

    <TextView
        android:id="@+id/carlist_tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_toLeftOf="@+id/carlist_tvTime"
        android:layout_toRightOf="@+id/carlist_ivAva"
        android:lineSpacingExtra="2.0dip"
        android:text="12121212听见了rot进而特别热特我让他"
        android:textColor="@color/car_header"
        android:textSize="16.0sp" />
    <ImageView
        android:id="@+id/carlist_ivPhoto"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:src="@drawable/avatars"
        />
    <TextView
        android:id="@+id/carlist_tvName"
        android:layout_below="@+id/carlist_tvContent"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/carlist_ivAva"
        android:layout_toLeftOf="@+id/carlist_iv"
        android:text="1222"
        android:singleLine="true"
        android:textColor="@color/car_content"
        android:textSize="14.0sp" />

    <ImageView
        android:id="@+id/carlist_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/carlist_tvReply"
        android:gravity="bottom"
        android:src="@drawable/icon_commen" />

    <TextView
        android:id="@+id/carlist_tvReply"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/carlist_tvContent"
        android:layout_alignTop="@+id/carlist_iv_time"
        android:layout_toLeftOf="@+id/carlist_iv_time"
        android:text="1255"
        android:layout_marginRight="16dp"
        android:textColor="@color/car_content"
        android:textSize="14.0sp"/>
	
	<ImageView
        android:id="@+id/carlist_iv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/carlist_tvTime"
        android:gravity="bottom"
        android:src="@drawable/icon_time" />
    <TextView
        android:id="@+id/carlist_tvTime"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/carlist_ivPhoto"
        android:textColor="@color/car_content"
        android:textSize="14.0sp"
        android:text="1分前" />
	
</RelativeLayout>