<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:miles="http://schemas.android.com/apk/res/com.youle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/cyq_tzbt"
    android:paddingBottom="8.0dip"
    android:paddingTop="8.0dip" >

    <com.youle.view.RoundedCornersImage
        android:id="@+id/carlist_ivAva"
        android:layout_width="48.0dip"
        android:layout_height="48.0dip"
        android:background="@drawable/avatars"
        android:scaleType="centerCrop"
        miles:cornerRadius="5.0dip" />

    <TextView
        android:id="@+id/carlist_tvContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@+id/carlist_ivAva"
        android:ellipsize="end"
        android:lineSpacingExtra="2.0dip"
        android:singleLine="true"
        android:text="12121212听见了rot进而特别热特我让他"
        android:textColor="@color/car_header"
        android:textSize="16.0sp" />

    <ImageView
        android:id="@+id/carlist_ivSound"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/carlist_tvContent"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@+id/carlist_ivAva"
        android:src="@drawable/mai" />

    <ImageView
        android:id="@+id/carlist_ivPic"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@+id/carlist_tvContent"
        android:layout_marginLeft="10.0dip"
        android:layout_toRightOf="@+id/carlist_ivSound"
        android:src="@drawable/tu" />

    <LinearLayout
        android:layout_width="68dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="4dp"
        android:layout_toLeftOf="@+id/carlist_ly_time"
        android:gravity="bottom|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/carlist_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:src="@drawable/icon_commen" />

        <TextView
            android:id="@+id/carlist_tvReply"
            android:layout_width="48dp"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:text="1255"
            android:textColor="@color/car_content"
            android:textSize="14.0sp"
            android:singleLine="true"
            android:ellipsize="end" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/carlist_ly_time"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:gravity="bottom|right"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/carlist_iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:src="@drawable/icon_time" />

        <TextView
            android:id="@+id/carlist_tvTime"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="58分钟前"
            android:textColor="@color/car_content"
            android:textSize="14.0sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/carlist_tvName"
        android:layout_width="48.0dip"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/carlist_ivAva"
        android:ellipsize="end"
        android:gravity="bottom|center"
        android:singleLine="true"
        android:text="122"
        android:textColor="@color/car_content"
        android:textSize="14.0sp" />

</RelativeLayout>