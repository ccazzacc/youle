<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/full_screen"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/coupon_default"
    android:orientation="horizontal" >

    <FrameLayout
        android:id="@+id/coupon_fy_photo"
        style="@style/wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="10dp" >

        <ImageView
            android:id="@+id/coupon_iv_photo"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:background="@drawable/avatars"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:background="@drawable/coupon_default2"
            android:scaleType="fitXY" />
    </FrameLayout>

    <LinearLayout
        style="@style/full_screen"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/coupon_tv_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="TextViewaaaaaaa"
            android:textColor="@color/coupon_title"
            android:textSize="@dimen/font_size_large" />

        <TextView
            android:id="@+id/coupon_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView2013-12-10"
            android:textColor="@color/coupon_time"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/coupon_tv_kilo"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="bottom"
            android:text="100as"
            android:textColor="@color/coupon_time"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>

</LinearLayout>