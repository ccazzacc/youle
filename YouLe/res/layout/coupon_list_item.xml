<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/wrap_content"
	android:background="@drawable/coupon_default">
<TextView
	android:id="@+id/coupon_tv_kilo"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="100"
	android:layout_alignBottom="@+id/coupon_iv_photo"
	android:layout_toRightOf="@+id/coupon_iv_photo" />
<TextView
	android:id="@+id/coupon_tv_time"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="TextView2013-12-10"
	android:layout_below="@+id/coupon_tv_info"
	android:layout_toRightOf="@+id/coupon_iv_photo" />
<TextView
	android:id="@+id/coupon_tv_info"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:text="TextViewaaaaaaaaaaaa"
	android:layout_alignTop="@+id/coupon_iv_photo"
	android:layout_toRightOf="@+id/coupon_iv_photo" />
<ImageView
	android:id="@+id/coupon_iv_photo"
	android:layout_width="104dp"
	android:layout_height="95dp"
	android:layout_centerVertical="true"
	android:layout_alignParentLeft="true" />
</RelativeLayout>
