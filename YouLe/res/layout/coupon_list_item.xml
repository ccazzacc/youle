<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/horizontal_stretch"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/coupon_default"
    android:orientation="horizontal" >
    <ImageView
        android:id="@+id/coupon_iv_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/code_pic"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/coupon_iv_photos"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignLeft="@+id/coupon_iv_photo"
        android:layout_alignTop="@+id/coupon_iv_photo"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        android:scaleType="fitXY"
        />
    <ImageView
        android:id="@+id/imageView1"
        style="@style/wrap_content"
        android:layout_alignBottom="@+id/coupon_tv_time"
        android:layout_alignTop="@+id/coupon_iv_photo"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/coupon_iv_photo"
        android:background="@drawable/coupon_splitter" />

    <TextView
        android:id="@+id/coupon_tv_sName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/coupon_iv_photo"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:text="钟鲶鱼"
        android:textColor="#e43043"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/coupon_tv_addre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coupon_tv_info"
        android:layout_below="@+id/coupon_tv_info"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:text="一品天下"
        android:textColor="@color/coupon_title"
        android:textSize="14sp" 
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/coupon_tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/coupon_tv_sName"
        android:layout_below="@+id/coupon_tv_sName"
        android:layout_marginRight="8dp"
        android:layout_marginTop="6dp"
        android:singleLine="true"
        android:text="TextView2013-12-10"
        android:textColor="@color/coupon_title"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/coupon_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/coupon_tv_addre"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:text="2013.6.20"
        android:textColor="@color/coupon_info"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/coupon_tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coupon_tv_addre"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="953米"
        android:textColor="@color/coupon_info"
        android:textSize="14sp" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/imageView1" />
</RelativeLayout>