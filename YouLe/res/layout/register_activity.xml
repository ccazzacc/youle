<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/full_screen"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/bg_color">
	<include layout="@layout/twobtn_header"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:background="@drawable/shape_bg"
        android:gravity="center_vertical"
        android:minHeight="50.0dip"
        android:orientation="vertical" >
		<LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15.0dip"
                android:text="@string/email"
                android:textColor="@color/reg_word"
                android:textSize="@dimen/font_size_large" />

            <EditText
                android:id="@+id/register_et_email"
                style="@style/height_math"
                android:layout_marginBottom="1.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@color/white"
                android:singleLine="true"
                android:layout_weight="1"
                android:textColor="#ff545454"
                android:textSize="16.0sp"
                android:focusable="true" />
            <ImageView
                android:id="@+id/register_iv_email"
                style="@style/wrap_content"
                android:layout_marginBottom="1.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/error"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/shape_line" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15.0dip"
                android:text="@string/register_name"
                android:textColor="@color/reg_word"
                android:textSize="@dimen/font_size_large" />

            <EditText
                android:id="@+id/register_et_name"
                style="@style/height_math"
                android:layout_marginBottom="1.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="1.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@color/white"
                android:maxLength="16"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#ff545454"
                android:textSize="16.0sp" />
            <ImageView
                android:id="@+id/register_iv_name"
                style="@style/wrap_content"
                android:layout_marginBottom="1.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/error"
                android:visibility="gone"/>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@drawable/shape_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15.0dip"
                android:text="@string/register_pw"
                android:textColor="@color/reg_word"
                android:textSize="@dimen/font_size_large" />

            <EditText
                android:id="@+id/register_et_pw"
                style="@style/height_math"
                android:layout_marginBottom="1.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="4.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@color/white"
                android:inputType="textPassword"
                android:maxLength="16"
                android:layout_weight="1"
                android:singleLine="true"
                android:textColor="#ff545454"
                android:textSize="16.0sp" />
            <ImageView
                android:id="@+id/register_iv_pw"
                style="@style/wrap_content"
                android:layout_marginBottom="1.0dip"
                android:layout_marginRight="2.0dip"
                android:layout_marginTop="1.0dip"
                android:background="@drawable/error"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
    <Button 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="10.0dip"
        android:layout_marginTop="20.0dip"
        android:id="@+id/register_btn"
        android:background="@drawable/bar_btn_register"
        />
</LinearLayout>

