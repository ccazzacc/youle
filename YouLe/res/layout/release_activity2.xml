<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/hoho"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg"
                android:orientation="vertical">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/release_bg" android:id="@+id/relativeLayout2">


        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rB1" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/button_trafficjam_normal" android:layout_marginLeft="5dp"
                android:checked="true"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rB2"
                android:checked="false"
                android:background="@drawable/button_event_normal" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rB3" android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" android:checked="false"
                android:background="@drawable/button_danger_normal"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rB4" android:layout_below="@+id/rB1"
                android:layout_alignParentLeft="true" android:checked="false"
                android:background="@drawable/button_road_normal" android:layout_marginLeft="5dp"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rB5" android:layout_alignTop="@+id/rB4"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_unmpeded_normal"
                android:checked="false"/>

    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/RelativeLayout_record"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone">

        <Button
                android:id="@+id/button_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/record_icon"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageVol"
                android:background="@drawable/vol1"
                android:layout_alignRight="@+id/button_record" android:layout_alignBottom="@+id/button_record"
                android:layout_alignTop="@+id/button_record"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

        <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:background="@drawable/bottom_bar_bg">

            <Button
                    android:id="@+id/button_xx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/relativeLayout"
                    android:layout_alignLeft="@+id/relativeLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bar_button_quit"/>

            <Button
                    android:id="@+id/button_say"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/button_xx"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toLeftOf="@+id/button_add"
                    android:layout_toRightOf="@+id/button_xx"
                    android:background="@drawable/bar_button_speak"/>

            <Button
                    android:id="@+id/button_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/button_xx"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/bar_button_add"/>

            <EditText
                    android:id="@+id/edit_say"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/button_xx"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/button_add"
                    android:layout_toRightOf="@+id/button_xx"
                    android:background="@drawable/bar_edit_speak_bg"
                    android:visibility="gone"/>
        </RelativeLayout>

        <TableLayout
                android:id="@+id/relativeLayout_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/relativeLayout1"
                android:layout_below="@+id/relativeLayout1"
                android:stretchColumns="*"
                android:visibility="gone">

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <Button
                        android:id="@+id/button_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:background="@drawable/button_text_a"/>

                <Button
                        android:id="@+id/button_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@drawable/button_camera_b"/>

                <Button
                        android:id="@+id/button_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:background="@drawable/button_photo_c"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageTime" android:layout_below="@+id/relativeLayout2"
            android:layout_centerHorizontal="true" android:background="@drawable/buton_sinaweibo_normal"/>

</RelativeLayout>