<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:roundProgress="http://schemas.android.com/apk/res/com.youle"
                android:id="@+id/hoho"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ff2e3034">
    <RelativeLayout
            android:id="@+id/main_tab_group"
            android:layout_width="fill_parent"
            android:layout_height="56dip"
            android:layout_gravity="left|bottom"
            android:background="@drawable/top_bar_bg"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true">

        <Button
                android:id="@+id/release_close"
                style="@style/wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bar_button_close_normal" android:layout_alignParentStart="false"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/put_road"
                android:id="@+id/map_title" android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                android:textSize="20dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout2"
            android:layout_above="@+id/linearLayout" android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp" android:layout_marginLeft="30dp" android:layout_marginRight="30dp">


        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_btn1" android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/crowd_pressed"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/traffic"
                android:id="@+id/textView1" android:layout_below="@+id/release_btn2"
                android:layout_alignLeft="@+id/release_btn1" android:layout_alignRight="@+id/release_btn1"
                android:gravity="center" android:textSize="20dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_btn2" android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/accident_normal"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_btn3" android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/danger_normal"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accident"
                android:id="@+id/textView2" android:layout_below="@+id/release_btn2"
                android:layout_alignLeft="@+id/release_btn2" android:layout_alignRight="@+id/release_btn2"
                android:gravity="center" android:textSize="20dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/danger"
                android:id="@+id/textView3" android:layout_below="@+id/release_btn3"
                android:layout_alignLeft="@+id/release_btn3" android:layout_alignRight="@+id/release_btn3"
                android:gravity="center" android:textSize="20dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_btn5" android:layout_below="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:background="@drawable/often_normal" android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/police"
                android:id="@+id/textView5" android:layout_below="@+id/release_btn5"
                android:layout_alignLeft="@+id/release_btn5" android:layout_alignRight="@+id/release_btn5"
                android:gravity="center" android:textSize="20dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_btn4" android:layout_below="@+id/textView1"
                android:layout_alignParentLeft="true"
                android:background="@drawable/road_normal" android:layout_marginTop="10dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/roads"
                android:id="@+id/textView4" android:layout_below="@+id/release_btn4"
                android:layout_alignLeft="@+id/release_btn4" android:layout_alignRight="@+id/release_btn4"
                android:gravity="center" android:textSize="20dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_btn6" android:layout_below="@+id/textView3"
                android:layout_alignParentRight="true"
                android:background="@drawable/webcam_normal" android:layout_marginTop="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/monitor"
                android:id="@+id/textView6" android:layout_below="@+id/release_btn6"
                android:layout_alignLeft="@+id/release_btn6" android:layout_alignRight="@+id/release_btn6"
                android:gravity="center" android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

        <RelativeLayout
                android:id="@+id/release_layout_record"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                >

            <!--<Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_btnRecord"
                    android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                    android:background="@drawable/bar_button_record_normal"/>-->
            <com.youle.view.CircleProgress
                    android:id="@+id/roundBar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bar_button_speak_normal"
                    roundProgress:max="100"
                    roundProgress:fill="false"
                    roundProgress:Inside_Interval="6"
                    roundProgress:Paint_Width="10"
                    android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_btnAdd"
                    android:background="@drawable/bar_button_add2_normal"
                    android:layout_centerVertical="true" android:layout_toRightOf="@+id/roundBar1"
                    android:layout_marginLeft="15dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_btnRecord"
                    android:layout_centerVertical="true" android:layout_centerHorizontal="true"
                    android:background="@drawable/bar_icon_null"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/release_btnQuit"
                    android:layout_centerVertical="true" android:layout_toLeftOf="@+id/roundBar1"
                    android:layout_marginRight="15dp" android:background="@drawable/bar_button_quti2_normal"
                    android:visibility="gone"/>
        </RelativeLayout>

        <TableLayout
                android:id="@+id/relativeLayout_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/release_layout_record"
                android:layout_below="@+id/release_layout_record"
                android:stretchColumns="*"
                android:visibility="gone">

            <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                <Button
                        android:id="@+id/button_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="0"
                        android:background="@drawable/button_text_a"/>

                <Button
                        android:id="@+id/button_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="1"
                        android:background="@drawable/button_camera_b"/>

                <Button
                        android:id="@+id/button_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="2"
                        android:background="@drawable/button_photo_c"/>
            </TableRow>
        </TableLayout>
    </RelativeLayout>
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:background="@drawable/prompt_bg" android:layout_above="@+id/relativeLayout"
            android:layout_centerHorizontal="true" android:layout_marginBottom="20dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/press_talk"
                android:id="@+id/relase_txt_info"
                android:layout_gravity="center" android:textSize="20dp" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/release_input"
            android:layout_width="fill_parent"
            android:layout_height="50dp" android:layout_above="@+id/relativeLayout"
            android:layout_alignParentLeft="true" android:background="@drawable/bottom_bar_bg"
            android:visibility="gone">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_edit_input" android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bottom_bar_input_box"
                android:layout_margin="5dp" android:layout_toLeftOf="@+id/release_send"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_send" android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bar_button_send_normal" android:layout_margin="5dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/release_size" android:layout_alignBottom="@+id/release_edit_input"
                android:layout_alignRight="@+id/release_edit_input" android:layout_marginRight="3dp"/>
    </RelativeLayout>

</RelativeLayout>