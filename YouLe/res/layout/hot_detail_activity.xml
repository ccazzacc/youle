<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/top_bar_bg"
            android:id="@+id/relativeLayout">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hot_detail_back"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:background="@drawable/bar_button_back_normal"
                android:layout_marginLeft="5dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hot_detail_text"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="22sp"
                android:text="@string/all"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hot_detail_posts"
                android:layout_alignParentStart="false"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/bar_button_normal"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"/>
    </RelativeLayout>

    <WebView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/hot_webView"
            android:layout_gravity="left|center_vertical"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentLeft="true"
            android:layout_above="@+id/hot_detail_re"/>

    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hot_pd"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:indeterminate="false"/>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/hot_detail_re"
            android:background="@color/white">

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shuoshuo"
                android:layout_marginLeft="15dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/say_something"
                android:id="@+id/textView"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageView"
                android:layout_marginLeft="15dp"
                android:textColor="@color/car_content"/>
    </RelativeLayout>

</RelativeLayout>