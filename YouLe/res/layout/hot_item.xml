<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/hot_title"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sdfgassddddddfgddddddddddddddddddddddddddddddddddddddfgdfgdfffffffffffffffffffffsssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssss"
            android:id="@+id/hot_con"
            android:ellipsize="end"
            android:layout_below="@+id/hot_title"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:textColor="@color/bg_color"
            android:maxLines="2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/hot_count"
            android:layout_below="@+id/hot_con"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/bg_color"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/hot_date"
            android:layout_below="@+id/hot_con"
            android:layout_toLeftOf="@+id/hot_count"
            android:layout_marginRight="10dp"
            android:textColor="@color/bg_color"/>
</RelativeLayout>